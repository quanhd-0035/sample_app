<% provide :title, t("static_pages.edit_user.title") %>
<% provide :button_text, t("static_pages.edit_user.submit") %>
<h1><%= t "static_pages.edit_user.update_profile" %></h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("static_pages.edit_user.change_avatar"),
        "http://gravatar.com/emails",
        target: "_blank" %>
    </div>
  </div>
</div>
