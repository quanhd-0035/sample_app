<% provide :title, t("static_pages.reset_edit.title") %>
<h1><%= t "static_pages.reset_edit.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label t("static_pages.user_form.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t("static_pages.user_form.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("static_pages.reset_edit.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
