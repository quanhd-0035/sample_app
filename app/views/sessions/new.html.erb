<% provide :title, t("static_pages.login.title") %>
<h1><%= t "static_pages.login.title" %></h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t("static_pages.login.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("static_pages.login.password") %>
      <%= link_to t("static_pages.login.reset"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "static_pages.login.remember_me" %></span>
      <% end %>

      <%= f.submit t("static_pages.login.title"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "static_pages.login.text" %> <%= link_to t("home.sign_up"), signup_path %></p>
  </div>
</div>
